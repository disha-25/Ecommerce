


<div class="columns">
 

  <div class="column is-7">
    <br>
    <h3 class="title is-3">Conversations</h3>
     <div class="keep-shopping pv1  has-text-right" style="margin-top: -65px; margin-right: -500px;">
  <%= link_to 'Keep Shopping', sellers_path, class: 'button is-link is-medium ' %>
</div>
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <% unless current_user.id == recipient %>
          <div class="columns">
            <div class="column">
              <div class="inline-block nudge-down-5"><%= gravatar_for recipient, size: 32 %></div>
              <div class="inline-block"><strong><%= link_to recipient.name, conversation_messages_path(conversation) %></strong></div>
             
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>   